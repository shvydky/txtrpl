    "version": "0.2.0",
    "configurations": [
        {
            "name": "Replace",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-p", "WebTiledLayer \\| +\/tiles\/([^\/]+)\/.*",
                "-t", "$1",
                "-i", "./input.txt",
                "-o", "./output.txt",
                "-r",
                "replace",                
            ]
        },
        {
            "name": "Append",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-p", "WebTiledLayer \\| +\/tiles\/([^\/]+)\/.*",
                "-t", "XXXXXXXXXXX",
                "-i", "./input.txt",
                "-o", "./output.txt",
                "-r",
                "append",                
            ]
        },
        {
            "name": "Prepend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-p", "WebTiledLayer \\| +\/tiles\/([^\/]+)\/.*",
                "-t", "XXXXXXXXXXX",
                "-i", "./input.txt",
                "-o", "./output.txt",
                "-r",
                "prepend",                
            ]
        }

    ]
}